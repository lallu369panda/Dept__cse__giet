# Environment Variables for Render Deployment
# Add these to your Render service dashboard

# Database (Auto-populated by Render PostgreSQL service)
DATABASE_URL=postgresql://username:password@hostname:port/database

# NextAuth Configuration (REQUIRED)
NEXTAUTH_URL=https://your-app-name.onrender.com
NEXTAUTH_SECRET=your-super-secure-secret-key-minimum-32-characters-long

# Production Settings
NODE_ENV=production

# Application Configuration
NEXT_PUBLIC_APP_NAME=CSE Department - GIET University
NEXT_PUBLIC_DOMAIN=your-app-name.onrender.com

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,image/webp

# Email Configuration (Optional - for notifications)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@giet.edu

# Security Headers
NEXT_PUBLIC_CSP_NONCE=true

# Render Specific
RENDER=true
PORT=10000